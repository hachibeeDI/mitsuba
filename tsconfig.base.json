{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@tests/shared/*": ["tests/shared/*"],

      "@mitsuba/core/*": ["packages/core/src/*"],
      "@mitsuba/amqp-broker/*": ["packages/amqp-broker/src/*"],
      "@mitsuba/sqs-broker/*": ["packages/sqs-broker/src/*"],
      "@mitsuba/amqp-backend/*": ["packages/amqp-backend/src/*"]
    },

    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "erasableSyntaxOnly": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "lib": ["esnext"],
    "types": ["node"]
  },

  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/amqp-broker" },
    { "path": "./packages/amqp-backend" },
    { "path": "./packages/sqs-broker" }
  ],

  "files": [],

  "exclude": [
    "vitest.config.ts", "node_modules/*"
  ],

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
