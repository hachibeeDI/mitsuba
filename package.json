{
  "name": "mitsuba",
  "version": "0.0.1",
  "description": "Celery port for TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "check:type": "npm run --workspaces check:type",
    "check:lint": "biome lint packages/ tests/ --vcs-use-ignore-file=true",
    "check:style": "biome format packages/ tests/ --vcs-use-ignore-file=true",
    "check-all": "npm run check:type && npm run check:lint && npm run check:style",
    "fix:lint": "npm run check:lint -- --fix",
    "fix:style": "npm run check:style -- --write",
    "fix-all": "npm run fix:style && npm run fix:lint",

    "build": "npm run build:cjs && npm run build:mjs",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "build:mjs": "tsc -b tsconfig.mjs.json",

    "e2e:setup": "docker compose up -d",
    "e2e:status": "docker compose ps",
    "e2e:logs": "docker compose logs",
    "e2e:stop": "docker compose stop",
    "e2e:clean": "docker compose down -v",
    "e2e:rebuild": "docker compose build worker worker-2 sqs-worker",
    "e2e:run": "npm run e2e:setup && echo \"Waiting for services to start...\" && sleep 10",

    "pretest": "npm run e2e:run && npm run test:e2e && npm run e2e:clean",
    "test": "vitest run",

    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e:sqs": "BACKEND_URL=amqp://guest:guest@localhost:5672 BROKER_URL=sqs://localhost:9324 npx vitest run tests/e2e",
    "test:e2e:rabbitmq": "BACKEND_URL=amqp://guest:guest@localhost:5672 BROKER_URL=amqp://guest:guest@localhost:5672 npx vitest run tests/e2e",
    "test:e2e": "npm run test:e2e:sqs; npm run test:e2e:rabbitmq",

    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "celery",
    "typescript",
    "task",
    "queue",
    "amqp",
    "rabbitmq"
  ],
  "author": "OguraDaiki",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {},
  "ts-node": {
    "esm": true,
    "project": "tsconfig.mjs.json",
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
